  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Develop",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/.bin/gridsome",
      // "stopOnEntry": false,
      "args": [
        "develop"
      ],
      "cwd": "${workspaceRoot}",
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Build",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/.bin/gridsome",
      "args": [
        "build"
      ],
      "cwd": "${workspaceRoot}",
    }
  ]
}